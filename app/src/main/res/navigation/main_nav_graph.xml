<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.ecommercetask.presentation.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_productFragment"
            app:destination="@id/productFragment"
            app:popUpToInclusive="true"

            />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.ecommercetask.presentation.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_product"/>
    <fragment
        android:id="@+id/productFragment"
        android:name="com.example.ecommercetask.presentation.product.ProductFragment"
        android:label="ProductFragment" />
    <fragment
        android:id="@+id/shoppingCartFragment"
        android:name="com.example.ecommercetask.presentation.shoppingCart.ShoppingCartFragment"
        android:label="ShoppingCartFragment" />
</navigation>